{
  "name": "Virtual Webcam MV3",
  "version": "1.0.0",
  "minimum_chrome_version": "10.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "description": "Virtual webcam - Google Meet, select virtual webcam in settings",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/inject.js"],
      "run_at": "document_start",
      "all_frames": true,
      "type": "module"
    }
  ],
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "resources": ["js/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
